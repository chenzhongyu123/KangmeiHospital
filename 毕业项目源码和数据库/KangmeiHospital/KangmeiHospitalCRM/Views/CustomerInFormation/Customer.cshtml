
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/KangMeiLayout.cshtml";
}
@using Model;
@model List<CustomerInformation>
<style type="text/css">
    #top {
        width: 80%;
        background-color: #fff;
        border-radius: 4px;
        box-shadow: 0 2px 2px rgba(10, 16, 20, .24), 0 0 2px rgba(10, 16, 20, .12);
        box-sizing: border-box;
        transition: box-shadow .5s;
        margin: 0px auto;
    }

    table {
        text-align: center;
    }
</style>
<div id="top">
    <nav aria-label="breadcrumb" style="margin-top:25px;">
        <ol class="breadcrumb" style="background-color:darkgrey; width:100%; height:50px;">
            <li class="breadcrumb-item"><a href="/CustomerInFormation/Index">首页</a></li>
            <li class="breadcrumb-item"><a style="color:white;">客户信息</a></li>
            <li class="breadcrumb-item"><a href="/CustomerInFormation/Customer">客户档案</a></li>
            @*此处查询功能*@
            <li>
                <form method="post" action="" class="form-inline">
                    <input type="text" name="Sname" id="Sname" value="@ViewBag.sname" placeholder="请输入姓名" style="margin-top:-6px;" />
                    <input type="submit" value="查询" class="btn btn-primary" style="margin-top:-6px;" />
                </form>
            </li>
            <li class="text-right" style="width:95%; height:20px;">
                <a href="#" class="btn btn-danger right" style="width:50px;font-size:5px; margin-top:-50px;" data-toggle="modal" data-target="#exampleModal">
                    新增
                </a>
            </li>
        </ol>

    </nav>
    <div>
        <h2 style="text-align:center"> 客户信息页</h2>
    </div>
    <div>
        <table class="table table-hover table-info" width="100%">
            <tr>
                <td>序号</td>
                <td>姓名</td>
                <td>性别</td>
                <td>联系电话</td>
                <td>出生年月</td>
                <td>基本操作</td>
            </tr>

            @*此处增加循环出客户信息*@
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerID</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CustomerGender</td>
                    <td>@item.CustomerContactNumber</td>
                    <td>@item.dateOfBirth.ToShortDateString()</td>
                    <td>
                        <a href="/CustomerInFormation/DeleteCustomerInformation?id=@item.CustomerID" onclick="return confirm('你确定要删除吗？客户以下的资料都会删除！')">删除客户</a>/
                        <a href="/CustomerInFormation/DetailedCustomerInformation?id=@item.CustomerID">个人信息</a>/
                        <a href="/CustomerInFormation/CustomerDetails?id=@item.CustomerID">病史信息</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

